{
	"tasks": {
		"git:sync": "git submodule update --init --recursive",
		"setup": "deno task git:sync && deno run --allow-read --allow-write setup.ts",
		"start": "deno task setup && deno run --allow-net --allow-read --allow-write --allow-env --sloppy-imports main.ts",
		"check": "deno check main.ts"
	},
	"imports": {
		"@smithy/fetch-http-handler": "npm:@smithy/fetch-http-handler@^5.3.8",
		"@std/async": "jsr:@std/async@^1.0.16",
		"@std/fs": "jsr:@std/fs@^1.0.21",
		"@std/jsonc": "jsr:@std/jsonc@^1.0.2",
		"@std/path": "jsr:@std/path@^1.1.4",
		"@types/pouchdb-core": "npm:@types/pouchdb-core@^7.0.15",
		"diff-match-patch": "npm:diff-match-patch@^1.0.5",
		"octagonal-wheels": "npm:octagonal-wheels@^0.1.45",
		"fflate": "npm:fflate@^0.8.2",
		"minimatch": "npm:minimatch@^10.1.1",
		"xxhash-wasm": "npm:xxhash-wasm@^1.1.0",
		"qrcode-generator": "npm:qrcode-generator@^1.5.2",
		"pouchdb-adapter-http": "npm:pouchdb-adapter-http@^9.0.0",
		"pouchdb-core": "npm:pouchdb-core@^9.0.0",
		"pouchdb-errors": "npm:pouchdb-errors@^9.0.0",
		"pouchdb-find": "npm:pouchdb-find@^9.0.0",
		"pouchdb-mapreduce": "npm:pouchdb-mapreduce@^9.0.0",
		"pouchdb-merge": "npm:pouchdb-merge@^9.0.0",
		"pouchdb-replication": "npm:pouchdb-replication@^9.0.0",
		"pouchdb-utils": "npm:pouchdb-utils@^9.0.0",
		"transform-pouch": "npm:transform-pouch@^2.0.0"
	},
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true
	},
	"nodeModulesDir": "auto"
}
